@model ICollection<IndexViewModel>

@{
	ViewData["Title"] = "Home Page";
	List<IndexViewModel> food = Model.ToList();
}

<div class="text-center">
	<h1 class="display-4 fst-italic fw-light">Welcome to Yummy</h1>
	<h1 class="display-4 fst-italic fw-light">Bar and Food</h1>
</div>

<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < food.Count(); i++)
		{
			var currentFood = food[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img style="width: 100%; height: 800px; object-fit: cover;" src="@currentFood.ImageUrl" alt="@currentFood.Name">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-outline-warning" asp-controller="Food" asp-action="Details"
						   asp-route-id="@currentFood.Id"> @currentFood.Name</a>
					</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

<div class="row mt-3">
	<div class="col-12 text-center">
		<button class="btn btn-outline-info" id="statistics_btn">Show Statistics</button>
	</div>
</div>

<div class="mt-4 p-5 bg-light d-none" id="statistics_box">
	<div class="row">
		<h2 class="col-md-6 text-center" id="total_food"></h2>
		<h2 class="col-md-6 text-center" id="total_drinks"></h2>
	</div>
</div>

@section Scripts {
	<script>statistics();</script>
}