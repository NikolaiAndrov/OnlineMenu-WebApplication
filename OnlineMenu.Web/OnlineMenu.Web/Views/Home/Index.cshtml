@model ICollection<IndexViewModel>

@{
	ViewData["Title"] = "Home Page";
	List<IndexViewModel> food = Model.ToList();
}

<div class="text-center">
	<h1 class="display-4 fst-italic fw-light">Welcome to Yummy</h1>
	<h1 class="display-4 fst-italic fw-light">Bar and Food</h1>
</div>

@if (!food.Any())
{
	<div class="mt-4 p-5 bg-light">
		<p class="lead">
			@if (User.Identity?.IsAuthenticated ?? false)
			{
				<a asp-controller="Food" asp-action="Add" class="btn btn-primary btn-lg"
				   role="button">Add Food</a>
			}
		</p>
	</div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner">
		@for (int i = 0; i < food.Count(); i++)
		{
			var currentFood = food[i];
			<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
				<img class="d-block w-100" src="@currentFood.ImageUrl" alt="@currentFood.Name">
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="Food" asp-action="Details"
						   asp-route-id="@currentFood.Id"> @currentFood.Name</a>
					</h5>
				</div>
			</div>
		}
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>