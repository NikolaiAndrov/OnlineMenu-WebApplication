@using OnlineMenu.Services.Interfaces
@using OnlineMenu.Web.Infrastructure.Extensions
@inject IManagerService managerService;
@inject IUserService userService;

@model DrinkDetailsViewModel

@{
	ViewBag.Title = "Drink Details";
}

<h2 class="text-center display-6 fst-italic fw-light">@ViewBag.Title</h2>
<hr />

<div class="col-md-4">
	<div class="card mb-3">
		<img class="card-img-top" src="@Model.ImageUrl" alt="Drink Image" style="height: 350px; object-fit: cover;">
		<div class="card-body text-center">
			<h4>@Model.Name</h4>
			<h6>
				Quantity: @Model.Milliliters ml
			</h6>
			<h6>
				Price
				<b>@String.Format("{0:f2}", Model.Price) lv</b>
			</h6>
			<div>
				@if (Model.IsAlcoholic)
				{
					 <h6>Drink Category: @Model.Category</h6>
				}
			</div>
			<h6>
				Description: @Model.Description
			</h6>
			<br />

			@if (this.User.Identity?.IsAuthenticated ?? false)
			{
				string userId = this.User.GetId();
				bool isManager = await this.managerService.IsManagerExistingByUserIdAsync(userId);
				bool isInFavourite = await this.userService.IsDrinkInFavourite(userId, Model.Id);

				if (isInFavourite)
				{
					<a asp-area="" asp-controller="Drink" asp-action="RemoveFromFavourite" asp-route-id="@Model.Id" class="btn btn-outline-info">Remove from Favourite</a>
				}
				else
				{
					<a asp-area="" asp-controller="Drink" asp-action="AddToFavourite" asp-route-id="@Model.Id" class="btn btn-outline-info">Add to Favourite</a>
				}

				if (isManager)
				{
					<a asp-area="" asp-controller="Drink" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit</a>
					<a asp-area="" asp-controller="Drink" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
					<p></p>
				}
			}
		</div>
	</div>
</div>