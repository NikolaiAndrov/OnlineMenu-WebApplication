@model DrinkDeleteViewModel

@{
	ViewBag.Title = "Delete Food";
}

<h2 class="text-center display-6 fst-italic fw-light">@ViewBag.Title</h2>
<hr />

<div class="container mt-5">
	<form asp-action="Delete">
		<div class="row">
			<div class="col-md-4">
				<img class="card-img-top" src="@Model.ImageUrl" alt="Drink Image" style="height: 350px; object-fit: cover;">
			</div>
			<div class="col-md-8">
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" disabled="disabled" />
				</div>
				<div class="form-group mt-3">
					<label asp-for="Description" class="control-label"></label>
					<textarea asp-for="Description" class="form-control" rows="4" disabled="disabled"></textarea>
				</div>
				<div class="form-group">
					<input type="submit" value="Delete" class="btn btn-danger mt-3" />
				</div>
			</div>
		</div>
	</form>
</div>