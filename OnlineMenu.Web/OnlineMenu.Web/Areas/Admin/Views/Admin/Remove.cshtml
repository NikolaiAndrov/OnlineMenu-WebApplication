@model AdminPostModel

@{
	ViewBag.Title = "Remove Admin";
}

<h2 class="text-center fst-italic fw-light">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewData.ModelState["Error"].Errors.First().ErrorMessage
	</div>
}

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form method="post">
			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" placeholder="example@gmail.com">
				<span asp-validation-for="Email" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-outline-danger mt-3" type="submit" value="Remove" />
			</div>
		</form>
	</div>
</div>