@model ICollection<UserViewModel>

@{
	ViewBag.Title = "All Users";
}

<h2 class="text-center display-6 fst-italic fw-light">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
	<thead>
		<tr>
			<th><label>Email</label></th>
			<th><label>Full Name</label></th>
			<th><label>Phone Number</label></th>
			<th><label>Is Manager</label></th>
			<th><label>Is Admin</label></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td><label>@user.Email</label></td>
				<td><label>@user.FullName</label></td>
				<td><label>@user.PhoneNumber</label></td>
				<td>
					@if (user.PhoneNumber != string.Empty)
					{
						<label>✔</label>
					}
					else
					{
						<label class="text-center">❌</label>
					}
				</td>
				<td>
					@if (user.IsAdmin)
					{
						<label>✔</label>
					}
					else
					{
						<label class="text-center">❌</label>
					}
				</td>
			</tr>
		}
	</tbody>
</table>